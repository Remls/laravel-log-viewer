{
	"name": "laravel-log-viewer",
	"displayName": "Laravel Log Viewer",
	"description": "View last log of a Laravel project",
	"version": "0.0.2",
	"publisher": "remls",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Remls/laravel-log-viewer.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],
    "icon": "icon.png",
	"main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "remls.openLatestLog",
                "title": "Laravel Log Viewer: Open Latest Log"
            }
        ],
		"keybindings": [
			{
				"key": "ctrl+shift+l",
                "mac": "cmd+shift+l",
				"command": "remls.openLatestLog"
			}
		],
        "configuration": [
            {
                "title": "Laravel Log Viewer",
                "properties": {
                    "laravelLogViewer.isLaravelProject": {
                        "type": "boolean",
                        "default": false,
                        "description": "Is the project a Laravel project?"
                    },
                    "laravelLogViewer.logPath": {
                        "type": "string",
                        "default": "storage/logs",
                        "description": "Path to the log folder"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "typescript": "^4.9.4"
    }
}